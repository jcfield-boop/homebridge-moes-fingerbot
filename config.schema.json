{
  "pluginAlias": "MoesFingerbot",
  "pluginType": "accessory",
  "singular": true,
  "schema": [
    {
      "type": "text",
      "title": "Name",
      "required": true,
      "default": "Fingerbot",
      "placeholder": "Fingerbot"
    },
    {
      "type": "text",
      "title": "Bluetooth Address",
      "required": true,
      "placeholder": "DC:23:51:B7:71:33"
    },
    {
      "type": "number",
      "title": "Press Time (ms)",
      "default": 3000,
      "minimum": 100,
      "maximum": 10000
    },
    {
      "type": "number",
      "title": "Scan Duration (ms)",
      "default": 5000,
      "minimum": 1000,
      "maximum": 30000
    },
    {
      "type": "number",
      "title": "Scan Retries",
      "default": 3,
      "minimum": 0,
      "maximum": 10
    },
    {
      "type": "number",
      "title": "Scan Retry Cooldown (ms)",
      "default": 1000,
      "minimum": 100,
      "maximum": 10000
    },
    {
      "type": "checkbox",
      "title": "Enable Debug Logging",
      "default": false,
      "key": "debug"
    }
  ]
}