{
  "pluginAlias": "MoesFingerbot",
  "pluginType": "accessory",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "title": "Name",
        "required": true,
        "default": "Fingerbot"
      },
      "address": {
        "type": "string",
        "title": "Bluetooth Address",
        "required": true,
        "placeholder": "DC:23:51:B7:71:33"
      },
      "pressTime": {
        "type": "number",
        "title": "Press Time (ms)",
        "default": 3000,
        "minimum": 100,
        "maximum": 100000
      },
      "scanDuration": {
        "type": "number",
        "title": "Scan Duration (ms)",
        "default": 5000,
        "minimum": 1000,
        "maximum": 30000
      },
      "scanRetries": {
        "type": "number",
        "title": "Scan Retries",
        "default": 3,
        "minimum": 0,
        "maximum": 10
      },
      "scanRetryCooldown": {
        "type": "number",
        "title": "Scan Retry Cooldown (ms)",
        "default": 1000,
        "minimum": 100,
        "maximum": 10000
      },
      "debug": {
        "type": "boolean",
        "title": "Enable Debug Logging",
        "default": false
      },
      "commandCharacteristics": {
        "type": "string",
        "title": "Custom Command Characteristic UUIDs",
        "description": "Comma-separated list of characteristic UUIDs to try for sending commands (e.g., ffe1,ffe2). Leave blank for default.",
        "placeholder": "ffe1,ffe2"
      },
      "batteryCharacteristic": {
        "type": "string",
        "title": "Battery Level Characteristic UUID",
        "description": "Characteristic UUID to use for battery level (e.g., ffe2). Leave blank to auto-detect.",
        "placeholder": "ffe2"
      },
      "batteryCheckInterval": {
        "type": "number",
        "title": "Battery Poll Interval (minutes)",
        "default": 60,
        "minimum": 1,
        "maximum": 1440
      },
      "advanced": {
        "type": "object",
        "title": "Advanced Settings",
        "properties": {
          "deviceId": {
            "title": "Device ID",
            "type": "string",
            "description": "The Tuya Device ID (Virtual ID) for your Fingerbot."
          },
          "localKey": {
            "title": "Local Key",
            "type": "string",
            "description": "The 16-character Tuya Auth Key for encrypted BLE commands."
          }
        }
      }
    },
    "required": ["name", "address"]
  }
}